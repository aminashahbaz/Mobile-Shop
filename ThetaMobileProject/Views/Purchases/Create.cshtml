@model ThetaMobileProject.Models.Purchase

@{
    ViewData["Title"] = "Create";
    //Idhar bnao jesy kl btaya tha tmhain
    IList<Item> pli = ViewBag.pl;
    IList<Vendor> vli = ViewBag.cl;
}

<h2>Create</h2>

<h4>Purchase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemCode" class="control-label"></label>
                @Html.DropDownList("ItemCode", new SelectList(pli, "ItemCode", "ItemName"), "", new { @class = "form-control" })
                <span asp-validation-for="ItemCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorCode" class="control-label"></label>
                @Html.DropDownList("VendorCode", new SelectList(vli, "VendorCode", "VendorName"), "", new { @class = "form-control" })
                <span asp-validation-for="VendorCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
