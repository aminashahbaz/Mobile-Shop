@model IEnumerable<ThetaMobileProject.Models.ItemCatagory>
@{
    ViewData["Title"] = "ViewAllItemCatagory";
}
<h2>ViewAllItemCatagory</h2>
<p>
    <a asp-action="Create">Create New</a>
