                @Html.DisplayNameFor(model => model.Tdate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CatagoryCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CatagoryName)<span class="CCount badge pull-right" data-id="@item.CatagoryCode">0</span>
                </td>
                <td class="pull-right">
                    @Html.ActionLink("", "ItemCatagoryDetail", new { CatagoryCode = item.CatagoryCode }, new { @class = "btn-lg btn-success glyphicon glyphicon-info-sign", @title = "Detail" })

                    @Html.ActionLink("", "EditItemCatagory", new { CatagoryCode = item.CatagoryCode }, new { @class = "btn-lg btn-warning glyphicon glyphicon-edit", @title = "Edit" })

                    @Html.ActionLink("", "DeleteItemCatagory", new { CatagoryCode = item.CatagoryCode }, new { @class = "btn-lg btn-danger glyphicon glyphicon-trash", @title = "Delete" })






                </td>
            </tr>
        }
    </tbody>
</table>
